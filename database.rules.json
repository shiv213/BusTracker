{
  "rules": {
    "bus": {
      ".read": true,
      ".write": "root.child('users').child(auth.uid).child('isAdmin').val() == true"
    },
    "sms": {
      ".read": true,
      ".write": true
    },
    "bugs": {
      ".read": true,
      ".write": true
    },
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    }
  }
}